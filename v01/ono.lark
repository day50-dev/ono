start: (TEXT ono_block?)*

ono_block: OPEN_DELIM "?ono" content CLOSE_DELIM
         | "?ono" content "?"

content: (TEXT | variable | function_call | expression)*

variable: "$" IDENTIFIER

function_call: "$" IDENTIFIER "(" [argument ("," argument)*] ")"

expression: "$(" TEXT ")"

argument: TEXT | variable | function_call | expression

